<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >
    <android.support.v7.widget.CardView
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"


            app:cardBackgroundColor = "@android:color/white"
            app:cardCornerRadius = "2dp"
            app:cardElevation = "20dp"
            android:elevation = "20dp"
            android:background = "#E9FEEE"
    >
    
        <android.support.constraint.ConstraintLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content">
        
            <TextView
                    android:id = "@+id/textView_recyclerview_location_school_item"
                    android:layout_width = "0dp"
                    android:layout_height = "wrap_content"
                    android:layout_marginTop = "8dp"
                    android:layout_marginEnd = "8dp"
                    android:layout_marginRight = "8dp"
                    android:text = "Logbessou Douala - Cameroun"
                    android:textAppearance = "@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                    android:textSize = "12sp"
                    app:layout_constraintBottom_toTopOf = "@+id/textView_recyclerview_type_school_item"
                    app:layout_constraintEnd_toEndOf = "@+id/textView_recyclerview_name_item"
                    app:layout_constraintHorizontal_bias = "0.5"
                    app:layout_constraintStart_toStartOf = "@+id/textView_recyclerview_name_item"
                    app:layout_constraintTop_toBottomOf = "@+id/textView_recyclerview_name_item" />
        
            <ImageView
                    android:id = "@+id/imageView_recycler_school_item"
                    android:layout_width = "81dp"
                    android:layout_height = "93dp"
                    android:layout_marginStart = "8dp"
                    android:layout_marginLeft = "8dp"
                    android:layout_marginTop = "8dp"
                    android:layout_marginBottom = "8dp"
                    android:elevation = "10dp"
                    app:layout_constraintBottom_toBottomOf = "parent"
                    app:layout_constraintStart_toStartOf = "parent"
                    app:layout_constraintTop_toTopOf = "parent"
                    app:srcCompat = "@drawable/iuc" />
        
            <TextView
                    android:id = "@+id/textView_recyclerview_name_item"
                    android:layout_width = "0dp"
                    android:layout_height = "wrap_content"
                    android:layout_marginStart = "8dp"
                    android:layout_marginLeft = "8dp"
                    android:layout_marginTop = "8dp"
                    android:layout_marginEnd = "8dp"
                    android:layout_marginRight = "8dp"
                    android:text = "Institut universitaire de la côte"
                    android:textAppearance = "@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                    android:textColor = "@color/colorPrimary"
                    android:textSize = "14sp"
                    app:layout_constraintBottom_toTopOf = "@+id/textView_recyclerview_location_school_item"
                    app:layout_constraintEnd_toEndOf = "parent"
                    app:layout_constraintHorizontal_bias = "0.5"
                    app:layout_constraintStart_toEndOf = "@+id/imageView_recycler_school_item"
                    app:layout_constraintTop_toTopOf = "parent" />
        
            <TextView
                    android:id = "@+id/textView_recyclerview_type_school_item"
                    android:layout_width = "0dp"
                    android:layout_height = "wrap_content"
                    android:layout_marginTop = "8dp"
                    android:text = "Ecole privée"
                    android:textAppearance = "@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
                    android:textSize = "14sp"
                    app:layout_constraintBottom_toTopOf = "@+id/imageView2"
                    app:layout_constraintEnd_toEndOf = "@+id/textView_recyclerview_location_school_item"
                    app:layout_constraintHorizontal_bias = "0.5"
                    app:layout_constraintStart_toStartOf = "@+id/textView_recyclerview_location_school_item"
                    app:layout_constraintTop_toBottomOf = "@+id/textView_recyclerview_location_school_item" />
    
            <ProgressBar
                    android:id = "@+id/progressBar_item_school"
                    style = "@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width = "70dp"
                    android:layout_height = "20dp"

                    android:backgroundTint = "@color/design_default_color_primary"
                    android:elevation = "1dp"
                    android:max = "300"
                    android:maxHeight = "20dp"
                    android:progress = "12"
                    app:layout_constraintBottom_toBottomOf = "@+id/imageView2"
                    app:layout_constraintEnd_toEndOf = "@+id/imageView2"
                    app:layout_constraintStart_toStartOf = "@+id/imageView2"
                    app:layout_constraintTop_toTopOf = "@+id/imageView2" />
            <ImageView
                    android:id = "@+id/imageView2"
                    android:layout_width = "100dp"
                    android:layout_height = "20dp"
                    android:layout_marginTop = "8dp"
                    android:layout_marginEnd = "8dp"
                    android:layout_marginRight = "8dp"
                    android:elevation = "5dp"
                    app:layout_constraintBottom_toBottomOf = "@+id/imageView_recycler_school_item"
                    app:layout_constraintEnd_toEndOf = "@+id/textView_recyclerview_type_school_item"
                    app:layout_constraintTop_toBottomOf = "@+id/textView_recyclerview_type_school_item"
                    app:srcCompat = "@drawable/start_notation" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>