<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                                             xmlns:app = "http://schemas.android.com/apk/res-auto"
                                             xmlns:tools = "http://schemas.android.com/tools"
                                             android:layout_width = "match_parent"
                                             android:layout_height = "wrap_content"
>
	
	<android.support.v7.widget.CardView
			android:layout_width = "395dp"
			android:layout_height = "wrap_content"
			app:layout_constraintTop_toTopOf = "parent"
			app:layout_constraintStart_toStartOf = "parent"
			app:layout_constraintBottom_toBottomOf = "parent"
			app:layout_constraintEnd_toEndOf = "parent"
			app:cardElevation = "5dp" app:cardMaxElevation = "5dp" app:cardCornerRadius = "5dp">
		<android.support.constraint.ConstraintLayout
				android:layout_width = "match_parent"
				android:layout_height = "match_parent" android:layout_margin = "0dp">
			
			<ImageView
					android:layout_width = "70dp"
					android:layout_height = "70dp"
					app:srcCompat = "@drawable/icons_university_48px"
					android:id = "@+id/imageView_item_school_profil"
					app:layout_constraintStart_toStartOf = "parent"
					android:layout_marginStart = "8dp"
					android:layout_marginTop = "8dp"
					app:layout_constraintTop_toTopOf = "parent"
					android:layout_marginBottom = "8dp"
					app:layout_constraintBottom_toBottomOf = "parent"
					android:background = "@drawable/bg_imageview_school_item"
					android:padding = "5dp" />
			<TextView
					android:text = "@string/default_school_name"
					android:layout_width = "0dp"
					android:layout_height = "wrap_content"
					android:id = "@+id/textView_school_item_school_name"
					app:layout_constraintStart_toEndOf = "@+id/imageView_item_school_profil"
					android:layout_marginStart = "16dp"
					app:layout_constraintTop_toTopOf = "@+id/imageView_item_school_profil"
					style = "@android:style/Widget.TextView.PopupMenu"
					android:textColor = "@color/colorPrimaryDark"
					android:fontFamily = "sans-serif"
					android:textSize = "18sp" app:layout_constraintEnd_toStartOf = "@+id/imageView_item_school_best_font" />
			<TextView
					android:text = "@string/default_school_location"
					android:layout_width = "0dp"
					android:layout_height = "wrap_content"
					android:id = "@+id/textView_item_school_location"
					app:layout_constraintTop_toBottomOf = "@+id/textView_school_item_school_name"
					app:layout_constraintStart_toStartOf = "@+id/textView_school_item_school_name"
					app:layout_constraintEnd_toEndOf = "parent" android:textSize = "12sp"
					android:layout_marginEnd = "8dp" />
			<View
					android:layout_width = "0dp"
					android:layout_height = "0.8dp"
					android:id = "@+id/view9"
					app:layout_constraintTop_toBottomOf = "@+id/textView_item_school_location"
					app:layout_constraintStart_toStartOf = "@+id/textView_item_school_location"
					app:layout_constraintEnd_toEndOf = "@+id/textView_item_school_location"
					android:background = "@color/tiret"
					android:layout_marginTop = "5dp" />
			<TextView
					android:text = "@string/default_nomber_filiere"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:id = "@+id/textView_item_school_nombre_filiere"
					app:layout_constraintTop_toBottomOf = "@+id/view9"
					app:layout_constraintStart_toStartOf = "@+id/view9"
					android:textSize = "10sp" android:fontFamily = "sans-serif"
					app:layout_constraintBottom_toBottomOf = "parent" android:layout_marginBottom = "8dp" />
			<TextView
					android:text = "@string/default_nombre_campus"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:id = "@+id/textView_item_school_nombre_campus"
					android:textSize = "10sp"
					app:layout_constraintStart_toEndOf = "@+id/textView_item_school_nombre_filiere"
					app:layout_constraintTop_toTopOf = "@+id/textView_item_school_nombre_filiere"
					android:layout_marginStart = "16dp"
					android:fontFamily = "sans-serif"
			/>
			<ImageView
					android:id = "@+id/imageView3"
					android:layout_width = "90dp"
					android:layout_height = "15dp"
					android:elevation = "1dp"
					app:srcCompat = "@drawable/ic_star"
					app:layout_constraintStart_toEndOf = "@+id/textView_item_school_nombre_campus"
					android:layout_marginStart = "8dp"
					app:layout_constraintTop_toTopOf = "@+id/textView_item_school_nombre_campus"
					app:layout_constraintEnd_toEndOf = "parent"
					android:layout_marginEnd = "8dp"
					app:layout_constraintHorizontal_bias = "1.0" />
			<ProgressBar
					android:id = "@+id/progressBar_item_school_note"
					style = "@android:style/Widget.ProgressBar.Horizontal"
					android:layout_width = "67dp"
					android:layout_height = "15dp"
					
					android:backgroundTint = "@color/design_default_color_primary"
					android:elevation = "0dp"
					android:max = "300"
					android:maxHeight = "20dp"
					android:progress = "260"
					app:layout_constraintTop_toTopOf = "@+id/imageView3"
					app:layout_constraintEnd_toEndOf = "@+id/imageView3"
					app:layout_constraintStart_toStartOf = "@+id/imageView3"
					app:layout_constraintBottom_toBottomOf = "@+id/imageView3" />
			<ImageView
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					app:srcCompat = "@drawable/ic_pro"
					android:id = "@+id/imageView_item_school_best_font" app:layout_constraintEnd_toEndOf = "parent"
					android:layout_marginEnd = "8dp" app:layout_constraintTop_toTopOf = "parent" />
			<ImageView
					android:layout_width = "0dp"
					android:layout_height = "0dp"
					app:srcCompat = "@drawable/first"
					android:id = "@+id/imageView_item_school_best_ico"
					app:layout_constraintEnd_toEndOf = "@+id/imageView_item_school_best_font"
					app:layout_constraintStart_toEndOf = "@+id/textView_school_item_school_name"
					app:layout_constraintHorizontal_bias = "0.235"
					app:layout_constraintTop_toTopOf = "@+id/imageView_item_school_best_font"
					app:layout_constraintBottom_toBottomOf = "@+id/imageView_item_school_best_font"
					android:padding = "4dp" />
		</android.support.constraint.ConstraintLayout>
	</android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>