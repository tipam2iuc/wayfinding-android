<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android = "http://schemas.android.com/apk/res/android"
		xmlns:app = "http://schemas.android.com/apk/res-auto"
		android:layout_width = "match_parent"
		
		android:background="@color/colorPrimary"
		android:layout_height = "match_parent">
	
	
	<de.hdodenhof.circleimageview.CircleImageView
			android:id = "@+id/imageview_header_petite"
			android:layout_width = "40dp"
			android:layout_height = "40dp"
			android:layout_marginStart = "16dp"
			android:src = "@drawable/etudiant"
			android:paddingBottom="10dp"
			
			app:layout_constraintStart_toStartOf = "parent" android:layout_marginTop = "32dp"
			app:layout_constraintTop_toTopOf = "parent" />
	
	<TextView
			android:id = "@+id/textview_header_user_name"
			android:layout_width = "0dp"
			android:layout_height = "wrap_content"
			android:layout_marginStart = "8dp"
			android:layout_marginEnd = "8dp"
			android:text = "Meva'a Juliette"
			android:textColor = "@color/white"
			android:textSize = "18sp"
			android:textStyle = "bold"
			app:layout_constraintEnd_toEndOf = "parent"
			app:layout_constraintTop_toBottomOf = "@+id/imageview_header_petite"
			app:layout_constraintStart_toStartOf = "@+id/imageview_header_petite" />
	
	<TextView
			android:id = "@+id/textview_header_user_birthday"
			android:layout_width = "0dp"
			android:layout_height = "wrap_content"
			android:layout_marginEnd = "8dp"
			android:layout_marginRight = "8dp"
			android:text = "Modifier mes informations"
			android:textColor = "@color/textPrimary"
			android:layout_marginTop="10dp"
			android:textSize = "12sp"
			app:layout_constraintEnd_toEndOf = "@+id/textview_header_user_name"
			app:layout_constraintStart_toStartOf = "@+id/textview_header_user_name"
			app:layout_constraintTop_toBottomOf = "@+id/textview_header_user_name" />
	
	<View android:layout_width = "match_parent"
	      android:layout_height = "0.8dp"
	      app:layout_constraintTop_toBottomOf="@id/textview_header_user_birthday"
	      android:layout_marginTop="14dp"
	      android:background="@color/textPrimary"
	/>

</android.support.constraint.ConstraintLayout>