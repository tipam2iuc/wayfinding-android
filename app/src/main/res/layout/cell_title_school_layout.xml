<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app = "http://schemas.android.com/apk/res-auto" xmlns:tools = "http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bgContent"
              android:baselineAligned="false"
>

    <!-- LEFT TITLE PART -->
    <ImageView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            app:srcCompat = "@drawable/ic_pro"
            android:id = "@+id/imageView_item_school_best_font"
            app:layout_constraintTop_toTopOf = "parent" app:layout_constraintEnd_toEndOf = "parent"
            android:layout_marginEnd = "8dp" />
    <ImageView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content" app:srcCompat = "@drawable/ic_looks_one_black_24dp"
            android:id = "@+id/imageView11" app:layout_constraintEnd_toEndOf = "@+id/imageView_item_school_best_font"
            app:layout_constraintStart_toStartOf = "@+id/imageView_item_school_best_font"
            app:layout_constraintTop_toTopOf = "@+id/imageView_item_school_best_font"
            app:layout_constraintBottom_toBottomOf = "@+id/imageView_item_school_best_font"
            android:layout_marginBottom = "3dp" />
    <android.support.constraint.ConstraintLayout
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_weight = "3"
            android:background = "@color/bgTitleLeft"
            android:gravity = "center_horizontal"
            android:orientation = "vertical"
            android:paddingBottom = "10dp"
            android:paddingLeft = "10dp"
            android:paddingRight = "10dp"
            android:paddingTop = "10dp" android:id = "@+id/constraintLayout5"
            app:layout_constraintStart_toStartOf = "parent" app:layout_constraintHorizontal_bias = "0.5"
            app:layout_constraintEnd_toStartOf = "@+id/constraintLayout4"
            app:layout_constraintTop_toTopOf = "@+id/constraintLayout4"
            app:layout_constraintBottom_toBottomOf = "@+id/constraintLayout4" android:layout_marginTop = "8dp">
        <ImageView
                android:layout_width = "70dp"
                android:layout_height = "70dp"
                app:srcCompat = "@drawable/icons_university_48px"
                android:id = "@+id/imageView_item_school_profil"
                android:layout_marginTop = "8dp"
                app:layout_constraintTop_toTopOf = "parent"
                app:layout_constraintStart_toStartOf = "parent"
                android:layout_marginStart = "8dp"
                app:layout_constraintEnd_toEndOf = "parent"
                android:layout_marginEnd = "8dp"
                android:layout_marginBottom = "8dp"
                app:layout_constraintBottom_toBottomOf = "parent"
                android:background = "@drawable/bg_imageview_school_item" />
    </android.support.constraint.ConstraintLayout>
    <!-- RIGHT TITLE PART -->
    <android.support.constraint.ConstraintLayout
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:id = "@+id/constraintLayout4"
            app:layout_constraintStart_toEndOf = "@+id/constraintLayout5" app:layout_constraintHorizontal_bias = "0.5"
            app:layout_constraintEnd_toEndOf = "parent" app:layout_constraintTop_toTopOf = "parent"
            android:layout_marginBottom = "8dp" app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintVertical_bias = "0.0">
        <ImageView
                android:id = "@+id/title_from_to_dots_divider5"
                android:layout_width = "0dp"
                android:layout_height = "1dp"
                android:src = "@color/contentDividerLine"
                app:layout_constraintEnd_toEndOf = "@+id/textView_item_school_location"
                app:layout_constraintStart_toStartOf = "@+id/textView_item_school_location"
                app:layout_constraintTop_toBottomOf = "@+id/textView_item_school_location" />
        <TextView
                android:text = "UniversitÃ© de douala"
                android:layout_width = "0dp"
                android:layout_height = "wrap_content" android:id = "@+id/textView_school_item_school_name"
                android:layout_alignParentStart = "true"
                app:layout_constraintStart_toStartOf = "parent"
                android:textColor = "@color/colorPrimaryDark"
                android:fontFamily = "sans-serif"
                android:textSize = "18sp"

                android:layout_marginEnd = "8dp" app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintTop_toTopOf = "parent" android:layout_marginTop = "8dp" />
        <TextView
                android:text = "@string/default_school_location"
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:id = "@+id/textView_item_school_location"
                app:layout_constraintTop_toBottomOf = "@+id/textView_school_item_school_name"
                app:layout_constraintStart_toStartOf = "@+id/textView_school_item_school_name"
                app:layout_constraintEnd_toEndOf = "@+id/textView_school_item_school_name" android:textSize = "12sp"
                android:layout_marginTop = "4dp" />
        <ImageView
                android:id = "@+id/imageView10"
                android:layout_width = "90dp"
                android:layout_height = "15dp"
                android:elevation = "1dp"
                android:src = "@drawable/ic_star"
                app:layout_constraintStart_toEndOf = "@+id/constraintLayout6"
                app:layout_constraintEnd_toEndOf = "parent" android:layout_marginEnd = "8dp"
                app:layout_constraintTop_toTopOf = "@+id/constraintLayout6"
                app:layout_constraintBottom_toBottomOf = "@+id/constraintLayout6"
                app:layout_constraintHorizontal_bias = "0.5"
                app:layout_constraintHorizontal_chainStyle = "spread_inside" />
        <ProgressBar
                android:id = "@+id/progressBar_item_school_note"
                style = "@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width = "71dp"
                android:layout_height = "15dp"

                android:backgroundTint = "@color/design_default_color_primary"
                android:elevation = "0dp"
                android:max = "300"
                android:maxHeight = "20dp"
                android:progress = "260"
                android:background = "@color/white"
                android:hapticFeedbackEnabled = "true"
                app:layout_constraintTop_toTopOf = "@+id/imageView10"
                app:layout_constraintBottom_toBottomOf = "@+id/imageView10"
                app:layout_constraintEnd_toEndOf = "@+id/imageView10"
                app:layout_constraintStart_toStartOf = "@+id/imageView10" />
        <android.support.constraint.ConstraintLayout
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                app:layout_constraintTop_toBottomOf = "@+id/title_from_to_dots_divider5"
                app:layout_constraintStart_toStartOf = "parent"
                android:id = "@+id/constraintLayout6" app:layout_constraintHorizontal_bias = "0.5"
                app:layout_constraintEnd_toStartOf = "@+id/imageView10"
                app:layout_constraintHorizontal_chainStyle = "spread_inside" android:layout_marginTop = "4dp">
    
            <TextView
                    android:text = "@string/default_nomber_filiere"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:id = "@+id/textView_item_school_nombre_filiere"
                    app:layout_constraintTop_toTopOf = "parent" app:layout_constraintStart_toStartOf = "parent"
                    app:layout_constraintBottom_toBottomOf = "parent" app:layout_constraintHorizontal_bias = "0.0"
                    app:layout_constraintEnd_toStartOf = "@+id/textView_item_school_nombre_campus"
                    app:layout_constraintHorizontal_chainStyle = "packed"
                    android:textSize = "10sp" android:fontFamily = "sans-serif"

                    android:drawableLeft = "@drawable/ic_library_books_black_24dp" android:textColor = "#2F7671"
                    android:drawablePadding = "1dp" />
            <TextView
                    android:text = "@string/default_nombre_campus"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:id = "@+id/textView_item_school_nombre_campus"
                    app:layout_constraintStart_toEndOf = "@+id/textView_item_school_nombre_filiere"
                    android:layout_marginStart = "8dp"
                    app:layout_constraintTop_toTopOf = "@+id/textView_item_school_nombre_filiere"
                    app:layout_constraintBottom_toBottomOf = "@+id/textView_item_school_nombre_filiere"
                    app:layout_constraintHorizontal_bias = "0.5" app:layout_constraintEnd_toEndOf = "parent"
                    app:layout_constraintHorizontal_chainStyle = "packed"

                    android:textSize = "10sp" android:fontFamily = "sans-serif"
                    android:drawableLeft = "@drawable/ic_location_campus" android:textColor = "#0E88FF" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>