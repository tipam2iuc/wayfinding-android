<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:elevation="20dp"
        android:background="#E9FEEE"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/imageView_recycler_school_item"
                android:layout_width="85dp"
                android:layout_height="93dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/placeholder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/textView_recyclerview_location_school_item"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView_recycler_school_item"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/textView_recyclerview_location_school_item2"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView_recycler_school_item"
                app:layout_constraintTop_toBottomOf="@+id/textView_recyclerview_location_school_item" />

            <View
                android:id="@+id/textView_recyclerview_location_school_item3"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:background="@color/placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView_recycler_school_item"
                app:layout_constraintTop_toBottomOf="@+id/textView_recyclerview_location_school_item2" />

            <View
                android:id="@+id/textView_recyclerview_location_school_item4"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/placeholder"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_recycler_school_item"
                app:layout_constraintEnd_toEndOf="@+id/textView_recyclerview_location_school_item3"
                app:layout_constraintTop_toBottomOf="@+id/textView_recyclerview_location_school_item3" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:elevation="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView_recyclerview_location_school_item4"
                app:layout_constraintEnd_toEndOf="@+id/textView_recyclerview_location_school_item4"
                app:layout_constraintStart_toStartOf="@+id/textView_recyclerview_location_school_item4"
                app:layout_constraintTop_toTopOf="@+id/textView_recyclerview_location_school_item4"
                app:srcCompat="@drawable/start_notation" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>