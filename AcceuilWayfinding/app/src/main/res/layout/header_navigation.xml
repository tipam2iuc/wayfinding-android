<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/applicatioTheme">

    <ImageView
        android:id="@+id/imageview_header_grande"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/busi"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_header_petite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="34dp"
        android:src="@drawable/chimie"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_header_grande"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textview_header_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="User Name"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageview_header_petite"
        app:layout_constraintTop_toTopOf="@+id/imageview_header_petite" />

    <TextView
        android:id="@+id/textview_header_user_birthday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="birthday"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/textview_header_user_name"
        app:layout_constraintStart_toStartOf="@+id/textview_header_user_name"
        app:layout_constraintTop_toBottomOf="@+id/textview_header_user_name" />

    <TextView
        android:id="@+id/textview_header_user_lieu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lieu"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/textview_header_user_birthday"
        app:layout_constraintStart_toStartOf="@+id/textview_header_user_birthday"
        app:layout_constraintTop_toBottomOf="@+id/textview_header_user_birthday" />

</android.support.constraint.ConstraintLayout>